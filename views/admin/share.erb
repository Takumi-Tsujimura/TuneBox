<h5>共有</h5>

<!-- QRコードを表示 -->
<img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=https://tunebox.onrender.com/form/<%= @form_key %>" alt="QRコード" class="mb-3">

<!-- リンクコピー -->
<div class="mt-2">
  <input type="hidden" value="https://tunebox.onrender.com/form/<%= @form_key %>" id="shareLink" readonly class="form-control">
  <button onclick="copyShareLink()" class="btn btn-primary btn-sm mt-2">リンクをコピー</button>
</div>

<script>
function copyShareLink() {
  const copyText = document.getElementById('shareLink');
  copyText.select();
  document.execCommand('copy');
  alert('リンクをコピーしました！');
}
</script>
