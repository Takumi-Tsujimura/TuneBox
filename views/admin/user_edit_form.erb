<div>
  <% if session[:notice] %>
    <div style="color: green; margin-bottom: 20px;">
      <%= session[:notice] %>
    </div>
    <% session[:notice] = nil %> 
  <% end %>
  <form method="POST" action="/user/edit/<%= @user.id %>">
    <div>
      <div>
        <input type="hidden" name="_method" value="PATCH">
      </div>
      <div>
        <label for="first_name">性</label>
        <input type="text" id="first_name" name="first_name" value="<%= @user.first_name %>" required>
      </div>
      <div>
        <label for="last_name">名</label>
        <input type="text" id="last_name" name="last_name" value="<%= @user.last_name %>" required>
      </div>
      <div>
        <label for="nick_name">ニックネーム</label>
        <input type="text" id="nick_name" name="nick_name" value="<%= @user.nick_name %>" required>
      </div>
      <div>
        <label for="mail">メールアドレス</label>
        <input type="email" id="mail" name="mail" value="<%= @user.mail %>" required>
      </div>
      <div>
        <label for="password">パスワード</label>
        <input type="password" id="password" name="password" placeholder="変更する場合のみ入力" >
      </div>
    </div>
    <div>
      <button type="submit">保存</button>
    </div>
  </form>
  <form method="GET" action="/admin">
    <button type="submit">戻る</button>
  </form>
</div>
